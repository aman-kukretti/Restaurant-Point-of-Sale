<%- include('partials/header') -%>

<a href="/employees"><i class="fas fa-hand-point-left"></i></a>

<div class="inner">
  <h1 class="mainHeading">New Position</h1>

  <hr class="categorySeperator">

  <form class="" action="/newposition" method="post">
    <h3 class="formHeading">Position Title</h3>
    <input type="text" name="name" required>
    <br>
    <h3 class="formHeading">Hourly Pay</h3>
    <input type="number" name="salary" required>

    <div class="checkboxes">
      <input type="radio" class="checkboxicon" name="access" id="x" value="1" required>
      <label for="x" class="checkbox-heading">Infinity</label>
      <input type="radio" class="checkboxicon" name="access" id="y" value="2">
      <label for="y" class="checkbox-heading">Ordering</label>
      <input type="radio" class="checkboxicon" name="access" id="z" value="3">
      <label for="z" class="checkbox-heading">Viewing Orders</label>
    </div>

    <button type="submit" class="submit-button-item">Confirm</button>
  </form>

</div>

<%- include('partials/footer') -%>
