<%- include('partials/header') -%>

<a href="/employees"><i class="fas fa-hand-point-left"></i></a>

<div class="inner">
  <h1 class="mainHeading">Edit Employee</h1>

  <hr class="categorySeperator">

  <form class="" action="/employee/edit/<%=employee.id%>" method="post">
    <h3 class="formHeading">Employee Name</h3>
    <input type="text" name="name" value=<%=employee.name%> required>
    <br>

    <h3 class="formHeading">Position</h3>
    <div class="checkboxes">
      <%positions.forEach(function(position) {%>
        <div class="" style="display: inline;white-space: nowrap;">
          <input type="radio" class="checkboxicon" name="position" id="<%=position.name%>" value="<%=position.id%>" required
          <%if(position.id===employee.pos_id) {%>
            checked>
          <%} else {%>
            >
          <%}%>
          <label for="<%=position.name%>" class="checkbox-heading"><%=position.name%></label>
        </div>
      <%})%>
    </div>

    <h3 class="formHeading">Contact</h3>
    <input type="text" name="contact" value=<%=employee.contact%> required>
    <br>

    <h3 class="formHeading">Email</h3>
    <input type="text" name="email" value=<%=employee.email%> required>
    <br>

    <h3 class="formHeading">Password</h3>
    <input type="text" name="pass" value=<%=employee.password%> required>
    <br>

    <button type="submit" class="submit-button-item">Confirm</button>
  </form>

</div>

<%- include('partials/footer') -%>
